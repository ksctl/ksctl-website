---
import Container from "./Container.astro";

const team = [
  {
    name: "Dipankar Das",
    role: "Core Team",
    avatar: "https://avatars.githubusercontent.com/u/65275144",
    bio: "Kubernetes operations expert and Go developer building sustainable cloud infrastructure tools focused on environmental impact and cost efficiency.",
    github: "https://github.com/dipankardas011",
    twitter: "https://x.com/DipankarDas011",
    linkedin: "#"
  },
  {
    name: "Praful",
    role: "Core Team",
    avatar: "/images/avatars/praful.jpg",
    bio: "Passionate about cloud-native technologies and sustainable Kubernetes infrastructure solutions.",
    github: "https://github.com/Horiodino",
    twitter: "#",
    linkedin: "#"
  },
  {
    name: "Saiyam Pathak",
    role: "Core Team",
    avatar: "https://avatars.githubusercontent.com/u/8190114",
    bio: "Expert in multi-cloud deployments, Kubernetes operations, and sustainable infrastructure design.",
    github: "https://github.com/SaiyamPathak",
    twitter: "#",
    linkedin: "#"
  },
  {
    name: "Join Our Team",
    role: "We're Growing!",
    avatar: "https://api.dicebear.com/7.x/avataaars/svg?seed=ksctl-join",
    bio: "Interested in sustainable cloud infrastructure? We're always looking for passionate contributors and collaborators.",
    github: "#",
    twitter: "#",
    linkedin: "#",
    isPlaceholder: true
  }
];
---

<section class="relative py-24">
  <Container>
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        Meet the <span class="bg-gradient-to-r from-primary to-green-500 bg-clip-text text-transparent">Team</span>
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        The people behind ksctl and our vision for sustainable cloud infrastructure
      </p>
    </div>

    <!-- Team Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {team.map((member) => (
        <div class:list={[
          "group relative rounded-2xl border p-6 transition-all duration-300",
          member.isPlaceholder
            ? "bg-gradient-to-br from-primary/5 to-green-500/5 dark:from-primary/10 dark:to-green-500/10 border-primary/20 dark:border-primary/30 hover:border-primary/40"
            : "bg-white dark:bg-gray-800/70 border-gray-100 dark:border-gray-700/30 hover:shadow-2xl hover:-translate-y-2"
        ]}>
          <!-- Avatar -->
          <div class="relative mb-4">
            <div class="w-24 h-24 mx-auto rounded-full overflow-hidden border-4 border-gray-100 dark:border-gray-700 group-hover:border-primary transition-colors duration-300">
              <img
                src={member.avatar}
                alt={member.name}
                class="w-full h-full object-cover"
              />
            </div>
            {member.isPlaceholder && (
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-24 h-24 rounded-full bg-gradient-to-br from-primary/20 to-green-500/20 animate-pulse"></div>
              </div>
            )}
          </div>

          <!-- Name -->
          <h3 class="text-xl font-bold text-gray-900 dark:text-white text-center mb-1">
            {member.name}
          </h3>

          <!-- Role -->
          <p class="text-sm text-primary font-medium text-center mb-4">
            {member.role}
          </p>

          <!-- Bio -->
          <p class="text-sm text-gray-600 dark:text-gray-400 text-center mb-6 leading-relaxed">
            {member.bio}
          </p>

          <!-- Social Links -->
          <div class="flex justify-center space-x-4">
            {member.github && member.github !== "#" && (
              <a
                href={member.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors duration-300"
                aria-label="GitHub"
              >
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                  <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
                </svg>
              </a>
            )}
            {member.twitter && member.twitter !== "#" && (
              <a
                href={member.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors duration-300"
                aria-label="Twitter"
              >
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                  <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"></path>
                </svg>
              </a>
            )}
            {member.linkedin && member.linkedin !== "#" && (
              <a
                href={member.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors duration-300"
                aria-label="LinkedIn"
              >
                <svg fill="currentColor" class="w-5 h-5" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            )}
          </div>

          <!-- Decorative Element -->
          {!member.isPlaceholder && (
            <div class="absolute bottom-0 right-0 w-24 h-24 bg-gradient-to-tl from-primary/10 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          )}
        </div>
      ))}
    </div>

  </Container>
</section>
