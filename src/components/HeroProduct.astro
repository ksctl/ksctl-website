  <div class="absolute -left-20 top-40 w-60 h-60 bg-gradient-to-br from-green-300/20 to-emerald-200/30 rounded-full filter blur-3xl animate-float-delayed opacity-70 dark:opacity-30"></div>
  <div class="absolute bottom-0 right-10 w-80 h-80 bg-gradient-to-tr from-blue-200/20 to-cyan-200/30 rounded-full filter blur-3xl animate-float-slow opacity-70 dark:opacity-20"></div>

  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 w-full h-full bg-grid-pattern opacity-[0.05] dark:opacity-[0.03] pointer-events-none"></div>

  <Container>
    <div class="relative pt-28 md:pt-32 lg:pt-28 ml-auto">
