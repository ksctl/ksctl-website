---
import Container from "./Container.astro";
---

<div class="relative overflow-hidden z-0" id="home">
  <!-- Background elements -->
  <div class="absolute inset-0 w-full h-full bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-green-100 via-teal-50 to-white dark:from-green-900/20 dark:via-teal-900/10 dark:to-gray-900/50 pointer-events-none"></div>

  <!-- Animated geometric shapes -->
