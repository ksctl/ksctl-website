---
interface Props {
  imageSrc: string;
  imageAlt: string;
  addressBarText?: string;
  loading?: 'lazy' | 'eager';
  className?: string;
}

const {
  imageSrc,
  imageAlt,
  addressBarText = 'kubmin.ksctl.com',
  loading = 'lazy',
  className = '',
} = Astro.props;
---

<div
  class={`group relative bg-gray-900 rounded-xl shadow-2xl shadow-purple-500/10 overflow-hidden border border-gray-700/80 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:shadow-purple-500/20 ${className}`}
>
  <!-- Browser Chrome Header -->
  <div class="flex items-center bg-gray-800 px-4 py-3 border-b border-gray-700/80">
    <!-- Traffic Lights (macOS style) -->
    <div class="flex space-x-1.5">
      <div class="w-3 h-3 rounded-full bg-red-500"></div>
      <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
      <div class="w-3 h-3 rounded-full bg-green-500"></div>
    </div>

    <!-- Address Bar -->
    <div class="ml-4 text-gray-400 text-sm font-mono">
      {addressBarText}
    </div>
  </div>

  <!-- Screenshot Content -->
  <div class="relative bg-gray-900">
    <img
      src={imageSrc}
      alt={imageAlt}
      loading={loading}
      decoding="async"
      class="w-full h-auto"
    />
  </div>
</div>
