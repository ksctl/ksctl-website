<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('pricing-toggle');
    const durationElements = document.querySelectorAll('.price-duration');
    const perUnitElements = document.querySelectorAll('.price-per-unit');
    
    toggle.addEventListener('change', function() {
      const isAnnual = this.checked;
      
      durationElements.forEach(el => {
        el.textContent = isAnnual 
          ? el.getAttribute('data-annual')
          : el.getAttribute('data-monthly');
      });
      
      perUnitElements.forEach(el => {
        el.textContent = isAnnual 
          ? el.getAttribute('data-annual') 
          : el.getAttribute('data-monthly');
      });
    });
  });
</script>
