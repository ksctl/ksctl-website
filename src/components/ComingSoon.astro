---
import Container from "./Container.astro";

interface Props {
  productName: string;
  tagline: string;
  description: string;
  releaseDate?: string;
  logo?: string;
}

const { productName, tagline, description, releaseDate = "Coming Soon", logo = "/ksctl-logo.svg" } = Astro.props;
---

<div class="relative overflow-hidden min-h-screen flex items-center" id="coming-soon">
  <!-- Background elements -->
  <div class="absolute inset-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/20 via-teal-900/10 to-gray-900/50 pointer-events-none"></div>

  <!-- Animated geometric shapes -->
  <div class="absolute top-20 right-0 w-72 h-72 bg-gradient-to-br from-primary/20 to-teal-400/10 rounded-full filter blur-3xl animate-blob opacity-60"></div>
  <div class="absolute -left-20 bottom-20 w-60 h-60 bg-gradient-to-br from-green-300/15 to-emerald-200/20 rounded-full filter blur-3xl animate-blob animation-delay-2000 opacity-60"></div>
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-gradient-to-tr from-blue-200/10 to-cyan-200/15 rounded-full filter blur-3xl animate-blob animation-delay-4000 opacity-60"></div>

  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 w-full h-full bg-grid-pattern opacity-[0.02] pointer-events-none"></div>

  <Container>
    <div class="relative py-24 mx-auto max-w-4xl text-center">
      <!-- Logo -->
      <div class="mb-8 flex justify-center">
        <img
          src={logo}
          alt={`${productName} logo`}
          class="h-20 w-auto opacity-90"
        />
      </div>

      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-gradient-to-r from-primary to-teal-500 text-white font-semibold mb-8 shadow-lg shadow-primary/30 animate-pulse">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        <span class="text-lg">Coming Soon</span>
      </div>

      <!-- Product Name -->
      <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6">
        {productName}
      </h1>

      <!-- Tagline -->
      <p class="text-2xl md:text-3xl text-primary dark:text-teal-300 font-semibold mb-8">
        {tagline}
      </p>

      <!-- Description -->
      <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 leading-relaxed max-w-3xl mx-auto mb-12">
        {description}
      </p>

      <!-- What to Expect Section -->
      <div class="bg-white dark:bg-gray-800/70 rounded-2xl border border-gray-100 dark:border-gray-700/30 p-8 md:p-10 mb-12 text-left max-w-2xl mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
          What to Expect
        </h2>
        <ul class="space-y-4">
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">Unified dashboard for all your clusters</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">Real-time monitoring and alerting</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">Policy-as-code enforcement</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">Cost tracking across environments</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">Integration with ksctl for sustainable deployments</span>
          </li>
        </ul>
      </div>

      <!-- Release Timeline -->
      {releaseDate && (
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-12">
          <span class="font-semibold">Expected Release:</span> {releaseDate}
        </p>
      )}

      <!-- Email Signup (Disabled) -->
      <div class="max-w-md mx-auto mb-12">
        <form class="flex flex-col sm:flex-row gap-3">
          <input
            type="email"
            placeholder="Enter your email to get notified"
            class="flex-grow px-5 py-3 rounded-lg text-gray-900 bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary/50 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
            disabled
          />
          <button
            type="submit"
            class="px-6 py-3 rounded-lg bg-gray-300 dark:bg-gray-700 text-gray-500 dark:text-gray-500 font-medium cursor-not-allowed"
            disabled
          >
            Notify Me
          </button>
        </form>
        <p class="mt-3 text-sm text-gray-500 dark:text-gray-500">
          We'll email you when {productName} launches. No spam, ever.
        </p>
      </div>

      <!-- CTA to ksctl -->
      <div class="pt-8 border-t border-gray-200 dark:border-gray-700/50">
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          In the meantime, check out ksctl
        </p>
        <a
          href="/product/ksctl"
          class="inline-flex items-center justify-center h-12 px-8 rounded-lg bg-gradient-to-br from-primary to-teal-500 text-white font-medium shadow-lg shadow-primary/30 transition-all hover:shadow-xl hover:shadow-primary/40 hover:translate-y-[-2px] active:translate-y-[1px]"
        >
          <span class="flex items-center">
            Explore ksctl
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </Container>
</div>

<style>
.bg-grid-pattern {
  background-image:
    radial-gradient(circle, rgba(63, 103, 102, 0.3) 1px, transparent 1px);
  background-size: 30px 30px;
}

@keyframes blob {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  33% {
    transform: translate(30px, -50px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
}

.animate-blob {
  animation: blob 7s ease-in-out infinite;
}

.animation-delay-2000 {
  animation-delay: 2s;
}

.animation-delay-4000 {
  animation-delay: 4s;
}
</style>
