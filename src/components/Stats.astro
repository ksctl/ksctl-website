<div id="solution" class="py-16 sm:py-24 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800/70 relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>
    <div class="absolute right-0 top-20 w-64 h-64 bg-primary/5 rounded-full filter blur-3xl"></div>
    <div class="absolute left-0 bottom-10 w-72 h-72 bg-teal-400/5 rounded-full filter blur-3xl"></div>

