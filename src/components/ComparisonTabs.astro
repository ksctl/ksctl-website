  // Initialize Alpine.js tab functionality on the page
  document.addEventListener('DOMContentLoaded', () => {
    window.alpineData = {
      activeTab: 'features',
      setActiveTab(tab) {
        this.activeTab = tab;
        
        // Hide all tab contents
        document.querySelectorAll('[x-show]').forEach(el => {
          if (el.getAttribute('x-show').includes('activeTab ===')) {
            el.style.display = 'none';
          }
        });
        
        // Show the active tab content
        document.querySelector(`[x-show="activeTab === '${tab}'"]`).style.display = 'block';
        
        // Update button classes
        document.querySelectorAll('[x-class]').forEach(el => {
          const tabName = el.getAttribute('x-class').match(/'([^']+)'/)[1];
          const activeClass = el.getAttribute('x-class').match(/\{([^:]+):/)[1].trim();
          
          if (tabName === tab) {
            el.classList.add(...activeClass.split(' '));
          } else {
            el.classList.remove(...activeClass.split(' '));
            el.classList.add('border-transparent');
          }
        });
      }
    };
    
    // Setup initial active tab
    window.alpineData.setActiveTab('features');
    
    // Add click handlers to tab buttons
    document.querySelectorAll('[\\@click]').forEach(el => {
      const tabName = el.getAttribute('@click').match(/'([^']+)'/)[1];
      el.addEventListener('click', () => {
        window.alpineData.setActiveTab(tabName);
      });
    });
    
    // Handle transitions
    document.querySelectorAll('[x-transition\\:enter]').forEach(el => {
      el.classList.add('opacity-0');
      setTimeout(() => {
        el.classList.remove('opacity-0');
        el.classList.add('opacity-100');
      }, 50);
    });
  });
