---
import Container from "./Container.astro";
---

<div class="relative overflow-hidden z-0" id="home">
  <!-- Background elements -->
  <div class="absolute inset-0 w-full h-full bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-purple-100 via-indigo-50 to-white dark:from-purple-900/20 dark:via-indigo-900/10 dark:to-gray-900/50 pointer-events-none"></div>

  <!-- Animated geometric shapes -->
  <div class="absolute top-20 right-0 w-72 h-72 bg-gradient-to-br from-purple-500/30 to-indigo-400/20 rounded-full filter blur-3xl animate-float opacity-70 dark:opacity-30"></div>
  <div class="absolute -left-20 top-40 w-60 h-60 bg-gradient-to-br from-indigo-300/20 to-violet-200/30 rounded-full filter blur-3xl animate-float-delayed opacity-70 dark:opacity-30"></div>
  <div class="absolute bottom-0 right-10 w-80 h-80 bg-gradient-to-tr from-purple-200/20 to-fuchsia-200/30 rounded-full filter blur-3xl animate-float-slow opacity-70 dark:opacity-20"></div>

  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 w-full h-full bg-grid-pattern opacity-[0.05] dark:opacity-[0.03] pointer-events-none"></div>

  <Container>
    <div class="relative pt-28 md:pt-32 lg:pt-28 ml-auto">
      <!-- Two-column layout for desktop -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left column: Text content -->
        <div class="order-2 lg:order-1">
          <div class="lg:max-w-xl">
            <!-- MVP Badge -->
            <div class="inline-flex items-center mb-6 px-4 py-2 rounded-full bg-gradient-to-r from-purple-500/10 to-indigo-500/10 border border-purple-500/20 dark:border-purple-500/30">
              <span class="w-2 h-2 rounded-full bg-green-500 mr-2 animate-pulse"></span>
              <span class="text-sm font-medium bg-gradient-to-r from-purple-600 to-indigo-600 dark:from-purple-400 dark:to-indigo-400 bg-clip-text text-transparent">
                MVP Now Available
              </span>
            </div>

            <!-- Logo & Product Name -->
            <div class="flex items-center mb-6 animate-fadeIn">
              <img
                src="/kubmin-logo.svg"
                alt="kubmin logo"
                class="h-16 w-auto mr-4"
              />
              <h3 class="text-4xl font-bold text-gray-900 dark:text-white">
                kubmin
              </h3>
            </div>

            <!-- Tagline -->
            <p class="text-2xl font-semibold bg-gradient-to-r from-purple-600 to-indigo-500 bg-clip-text text-transparent mb-6">
              Sustainable and Insightful Workload Management
            </p>

            <!-- Description -->
            <p class="text-left text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-lg mb-6">
              Monitor your Kubernetes workloads with per-image sustainability insights. Track SCI scores, optimize resource usage, and make eco-conscious decisionsâ€”all in one unified dashboard.
            </p>

            <div class="mt-10">
              <!-- Primary CTA -->
              <a
                href="https://kubmin.ksctl.com"
                target="_blank"
                class="inline-flex items-center justify-center h-14 px-8 rounded-lg bg-gradient-to-br from-purple-600 to-indigo-600 text-white font-medium shadow-lg shadow-purple-500/30 transition-all hover:shadow-xl hover:shadow-purple-500/40 hover:translate-y-[-2px] active:translate-y-[1px]"
              >
                <span class="flex items-center">
                  Try Beta
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                </span>
              </a>
            </div>
          </div>
        </div>

        <!-- Right column: Dashboard Preview -->
        <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
          <div class="relative w-full max-w-lg">
            <!-- Decorative elements -->
            <div class="absolute -top-6 -right-6 w-32 h-32 bg-gradient-to-br from-purple-300/30 to-indigo-300/20 rounded-full blur-xl"></div>
            <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gradient-to-tr from-indigo-300/20 to-violet-300/20 rounded-full blur-xl"></div>

            <!-- Dashboard window -->
            <div class="relative bg-gray-900 rounded-xl shadow-2xl overflow-hidden border border-gray-700/80">
              <div class="flex items-center bg-gray-800 px-4 py-3 border-b border-gray-700/80">
                <div class="flex space-x-1.5">
                  <div class="w-3 h-3 rounded-full bg-red-500"></div>
                  <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                  <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <div class="ml-4 text-gray-400 text-sm font-mono">kubmin.ksctl.com</div>
              </div>

              <!-- Dashboard Content -->
              <div class="p-5 font-mono text-xs">
                <!-- Header Stats -->
                <div class="grid grid-cols-3 gap-3 mb-4">
                  <div class="bg-gray-800/50 border border-gray-700/50 rounded-lg p-3">
                    <div class="text-gray-400 text-xs mb-1">SCI Score</div>
                    <div class="text-2xl font-bold bg-gradient-to-r from-green-400 to-emerald-400 bg-clip-text text-transparent">8.5</div>
                    <div class="text-xs text-green-400">Good</div>
                  </div>
                  <div class="bg-gray-800/50 border border-gray-700/50 rounded-lg p-3">
                    <div class="text-gray-400 text-xs mb-1">CPU</div>
                    <div class="text-2xl font-bold text-blue-400">42%</div>
                    <div class="text-xs text-gray-500">Avg</div>
                  </div>
                  <div class="bg-gray-800/50 border border-gray-700/50 rounded-lg p-3">
                    <div class="text-gray-400 text-xs mb-1">Memory</div>
                    <div class="text-2xl font-bold text-purple-400">1.2GB</div>
                    <div class="text-xs text-gray-500">Used</div>
                  </div>
                </div>

                <!-- Container Images Section -->
                <div class="bg-gray-800/30 border border-gray-700/50 rounded-lg p-3">
                  <div class="text-gray-300 text-xs mb-3 flex items-center justify-between">
                    <span>Container Images (Top 5)</span>
                    <span class="text-purple-400">42 tracked</span>
                  </div>

                  <!-- Image rows -->
                  <div class="space-y-2">
                    <div class="flex items-center justify-between p-2 bg-gray-800/50 rounded">
                      <div class="flex items-center flex-1">
                        <div class="w-2 h-2 rounded-full bg-green-400 mr-2"></div>
                        <span class="text-gray-300 text-xs">nginx:1.21</span>
                      </div>
                      <div class="flex items-center gap-1 mr-2">
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-gray-600"></div>
                      </div>
                      <span class="text-green-400 text-xs">7.2</span>
                    </div>

                    <div class="flex items-center justify-between p-2 bg-gray-800/50 rounded">
                      <div class="flex items-center flex-1">
                        <div class="w-2 h-2 rounded-full bg-green-400 mr-2"></div>
                        <span class="text-gray-300 text-xs">redis:7.0</span>
                      </div>
                      <div class="flex items-center gap-1 mr-2">
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-gray-600"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-gray-600"></div>
                      </div>
                      <span class="text-green-400 text-xs">6.1</span>
                    </div>

                    <div class="flex items-center justify-between p-2 bg-gray-800/50 rounded">
                      <div class="flex items-center flex-1">
                        <div class="w-2 h-2 rounded-full bg-yellow-400 mr-2"></div>
                        <span class="text-gray-300 text-xs">postgres:14</span>
                      </div>
                      <div class="flex items-center gap-1 mr-2">
                        <div class="w-1.5 h-1.5 rounded-full bg-yellow-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-yellow-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-yellow-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-yellow-500"></div>
                        <div class="w-1.5 h-1.5 rounded-full bg-yellow-500"></div>
                      </div>
                      <span class="text-yellow-400 text-xs">8.9</span>
                    </div>
                  </div>
                </div>

                <!-- Bottom metrics -->
                <div class="mt-4 flex items-center justify-between text-xs">
                  <div class="flex items-center text-gray-400">
                    <span class="inline-block w-2 h-2 rounded-full bg-purple-500 mr-2"></span>
                    <span>15 workloads monitored</span>
                  </div>
                  <div class="text-gray-500">Updated 2m ago</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</div>

<style>
.bg-grid-pattern {
  background-image:
    radial-gradient(circle, rgba(139, 92, 246, 0.3) 1px, transparent 1px);
  background-size: 30px 30px;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fadeIn {
  animation: fadeIn 0.8s ease-out;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

@keyframes float-delayed {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15px); }
}

@keyframes float-slow {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animate-float-delayed {
  animation: float-delayed 8s ease-in-out infinite;
  animation-delay: 1s;
}

.animate-float-slow {
  animation: float-slow 10s ease-in-out infinite;
  animation-delay: 2s;
}
</style>
