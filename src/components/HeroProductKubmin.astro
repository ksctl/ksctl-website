---
import Container from "./Container.astro";
import BrowserMockup from "./BrowserMockup.astro";
---

<div class="relative overflow-hidden z-0" id="home">
  <!-- Background elements -->
  <div class="absolute inset-0 w-full h-full bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-purple-100 via-indigo-50 to-white dark:from-purple-900/20 dark:via-indigo-900/10 dark:to-gray-900/50 pointer-events-none"></div>

  <!-- Animated geometric shapes -->
  <div class="absolute top-20 right-0 w-72 h-72 bg-gradient-to-br from-purple-500/30 to-indigo-400/20 rounded-full filter blur-3xl animate-float opacity-70 dark:opacity-30"></div>
  <div class="absolute -left-20 top-40 w-60 h-60 bg-gradient-to-br from-indigo-300/20 to-violet-200/30 rounded-full filter blur-3xl animate-float-delayed opacity-70 dark:opacity-30"></div>
  <div class="absolute bottom-0 right-10 w-80 h-80 bg-gradient-to-tr from-purple-200/20 to-fuchsia-200/30 rounded-full filter blur-3xl animate-float-slow opacity-70 dark:opacity-20"></div>

  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 w-full h-full bg-grid-pattern opacity-[0.05] dark:opacity-[0.03] pointer-events-none"></div>

  <Container>
    <div class="relative pt-28 md:pt-32 lg:pt-28 ml-auto">
      <!-- Two-column layout for desktop -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left column: Text content -->
        <div class="order-2 lg:order-1">
          <div class="lg:max-w-xl">
            <!-- MVP Badge -->
            <div class="inline-flex items-center mb-6 px-4 py-2 rounded-full bg-gradient-to-r from-purple-500/10 to-indigo-500/10 border border-purple-500/20 dark:border-purple-500/30">
              <span class="w-2 h-2 rounded-full bg-green-500 mr-2 animate-pulse"></span>
              <span class="text-sm font-medium bg-gradient-to-r from-purple-600 to-indigo-600 dark:from-purple-400 dark:to-indigo-400 bg-clip-text text-transparent">
                MVP Now Available
              </span>
            </div>

            <!-- Logo & Product Name -->
            <div class="flex items-center mb-6 animate-fadeIn">
              <img
                src="/kubmin-logo.svg"
                alt="kubmin logo"
                class="h-16 w-auto mr-4"
              />
              <h3 class="text-4xl font-bold text-gray-900 dark:text-white">
                kubmin
              </h3>
            </div>

            <!-- Tagline -->
            <p class="text-2xl font-semibold bg-gradient-to-r from-purple-600 to-indigo-500 bg-clip-text text-transparent mb-6">
              Workload Intelligence
            </p>

            <!-- Description -->
            <p class="text-left text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-lg mb-6">
              Brings workload intelligence provisioned on runners. Monitor, analyze, and optimize your workloads with energy-powered intelligence.
            </p>

            <div class="mt-10 flex flex-wrap gap-4">
              <!-- Primary CTA -->
              <a
                href="https://kubmin.ksctl.com"
                target="_blank"
                class="inline-flex items-center justify-center h-14 px-8 rounded-lg bg-gradient-to-br from-purple-600 to-indigo-600 text-white font-medium shadow-lg shadow-purple-500/30 transition-all hover:shadow-xl hover:shadow-purple-500/40 hover:translate-y-[-2px] active:translate-y-[1px]"
              >
                <span class="flex items-center">
                  Try Beta
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                </span>
              </a>
              <!-- Secondary CTA -->
              <a
                href="#how-it-works"
                class="inline-flex items-center justify-center h-14 px-8 rounded-lg border-2 border-purple-500/30 dark:border-purple-400/30 text-purple-600 dark:text-purple-400 font-medium transition-all hover:bg-purple-50 dark:hover:bg-purple-900/20 hover:translate-y-[-2px] active:translate-y-[1px]"
              >
                See How It Works
              </a>
            </div>
          </div>
        </div>

        <!-- Right column: Dashboard Preview -->
        <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
          <div class="relative w-full max-w-lg">
            <!-- Decorative elements -->
            <div class="absolute -top-6 -right-6 w-32 h-32 bg-gradient-to-br from-purple-300/30 to-indigo-300/20 rounded-full blur-xl"></div>
            <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gradient-to-tr from-indigo-300/20 to-violet-300/20 rounded-full blur-xl"></div>

            <!-- Dashboard window -->
            <BrowserMockup
              imageSrc="/kubmin/kubmin-dashboard.png"
              imageAlt="kubmin dashboard showing workload list with SCI scores and sustainability metrics"
              addressBarText="kubmin.ksctl.com"
              loading="eager"
              className="relative z-10"
            />
          </div>
        </div>
      </div>
    </div>
  </Container>
</div>

<style>
.bg-grid-pattern {
  background-image:
    radial-gradient(circle, rgba(139, 92, 246, 0.3) 1px, transparent 1px);
  background-size: 30px 30px;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fadeIn {
  animation: fadeIn 0.8s ease-out;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

@keyframes float-delayed {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15px); }
}

@keyframes float-slow {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animate-float-delayed {
  animation: float-delayed 8s ease-in-out infinite;
  animation-delay: 1s;
}

.animate-float-slow {
  animation: float-slow 10s ease-in-out infinite;
  animation-delay: 2s;
}
</style>
