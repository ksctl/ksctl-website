---
import Container from "./Container.astro";
---

<div class="relative py-24 overflow-hidden">
  <!-- Background gradient blobs -->
  <div
    aria-hidden="true"
    class="absolute inset-0 h-max w-full m-auto grid grid-cols-2 -space-x-52 opacity-30 dark:opacity-20"
  >
    <div
      class="blur-[120px] h-64 bg-gradient-to-br from-primary to-green-400 animate-blob-slow dark:from-primary/70 dark:to-green-700/70"
    >
    </div>
    <div
      class="blur-[120px] h-40 bg-gradient-to-r from-cyan-400 to-sky-300 animate-blob-slow-delay dark:from-cyan-700/50 dark:to-sky-700/50"
    >
    </div>
  </div>
  
  <!-- Background grid pattern -->
  <div class="absolute inset-0 w-full h-full bg-grid-pattern opacity-[0.03] dark:opacity-[0.02]"></div>
  <Container>
    <div class="relative z-10">
      <!-- Contributors circle -->
      <div class="flex items-center justify-center -space-x-3">
        <div class="h-14 w-14 rounded-full ring-4 ring-white dark:ring-gray-800 bg-gradient-to-br from-primary/90 to-teal-500/90 flex items-center justify-center text-white font-bold text-lg shadow-xl">
          <span>10+</span>
        </div>
        <img
          loading="lazy"
          width="200"
          height="200"
          src="https://avatars.githubusercontent.com/u/8190114"
          alt="contributor photo"
          class="h-14 w-14 rounded-full object-cover border-4 border-white dark:border-gray-800 shadow-lg"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="https://avatars.githubusercontent.com/u/65275144"
          alt="contributor photo"
          class="z-10 h-16 w-16 rounded-full object-cover border-4 border-white dark:border-gray-800 shadow-lg"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="./images/avatars/praful.jpg"
          alt="contributor photo"
          class="relative h-14 w-14 rounded-full object-cover border-4 border-white dark:border-gray-800 shadow-lg"
        />
      </div>
      
      <div class="mt-12 m-auto space-y-8 md:w-8/12 lg:w-7/12">
        <h2
          class="text-center text-4xl font-bold text-gray-900 dark:text-white md:text-5xl xl:text-6xl tracking-tight"
        >
          Start Your <span class="bg-gradient-to-r from-primary to-green-500 dark:from-primary dark:to-green-400 bg-clip-text text-transparent">ksctl</span> Journey Today
        </h2>
        <p class="text-center text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Join the growing community of developers using ksctl to build sustainable, 
          cost-efficient Kubernetes deployments across any cloud
        </p>
        
        <div class="flex flex-wrap justify-center gap-6 pt-4">
          <a
            href="https://docs.ksctl.com/"
            class="relative flex h-14 px-8 items-center justify-center rounded-lg bg-gradient-to-r from-primary to-green-500 text-white font-medium transition-all hover:shadow-lg hover:shadow-primary/30 hover:-translate-y-1 active:translate-y-0 sm:w-max"
          >
            <span class="flex items-center text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
              </svg>
              Developer Guide
            </span>
          </a>
          <a
            href="https://docs.ksctl.com/docs/faq/"
            class="relative flex h-14 px-8 items-center justify-center rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white font-medium shadow-sm hover:border-primary/30 dark:hover:border-primary/30 hover:shadow hover:shadow-primary/5 hover:-translate-y-1 active:translate-y-0 transition-all sm:w-max"
          >
            <span class="flex items-center text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary dark:text-primary" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
              Learn More
            </span>
          </a>
        </div>
        
        <div class="pt-6 text-center">
          <a href="https://discord.ksctl.com" class="text-primary dark:text-primary/90 hover:text-primary-dark transition-colors text-sm font-medium flex items-center justify-center gap-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/>
            </svg>
            Join our Discord community
          </a>
        </div>
      </div>
    </div>
  </Container>
</div>

<style>
.bg-grid-pattern {
  background-image:
    radial-gradient(circle, rgba(63, 103, 102, 0.3) 1px, transparent 1px);
  background-size: 30px 30px;
}

@keyframes blob-slow {
  0% {
    transform: translate(0px, 0px) scale(1);
  }
  33% {
    transform: translate(30px, -30px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
  100% {
    transform: translate(0px, 0px) scale(1);
  }
}

@keyframes blob-slow-delay {
  0% {
    transform: translate(0px, 0px) scale(1);
  }
  33% {
    transform: translate(-30px, 30px) scale(1.1);
  }
  66% {
    transform: translate(20px, -20px) scale(0.9);
  }
  100% {
    transform: translate(0px, 0px) scale(1);
  }
}

.animate-blob-slow {
  animation: blob-slow 10s infinite;
}

.animate-blob-slow-delay {
  animation: blob-slow-delay 10s infinite;
  animation-delay: 3s;
}
</style>
