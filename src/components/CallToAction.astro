        <!--   src="https://avatars.githubusercontent.com/u/65275144" -->
        <!--   alt="member photo" -->
        <!--   class="h-8 w-8 rounded-full object-cover" -->
        <!-- /> -->
        <img
          loading="lazy"
          width="200"
          height="200"
          src="https://avatars.githubusercontent.com/u/8190114"
          alt="member photo"
          class="h-12 w-12 rounded-full object-cover"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="https://avatars.githubusercontent.com/u/65275144"
          alt="member photo"
          class="z-10 h-16 w-16 rounded-full object-cover"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="./images/avatars/praful.jpg"
          alt="member photo"
          class="relative h-12 w-12 rounded-full object-cover"
        />
